{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Current File with GLAD",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "${workspaceFolder}/glad.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I${workspaceFolder}/include",
                "-lGL",
                "-lglfw",
                "-ldl"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compiles the active C++ file and glad.c into its current folder"
        }
    ]
}